<div class='rounded-lg shadow-lg p-3'>
  <div class='d-flex justify-content-between align-items-center'>
    <h4 class='text-uppercase ml-4'>Application Form</h4>
    <div class='d-flex flex-column'>
      <div
        class='justify-content-center d-flex align-items-center font-weight-bold'
        style='width:150px;height:200px'
      >
        <img
          src='/user_images/{{image}}'
          alt='application'
          style='max-width:100%;height:auto'
        />
      </div>
    </div>
  </div>
  <div class='row my-4'>
    <div class='form-group col-md-6'>
      <label for='name' class='required'>Name</label>
      <input
        disabled
        type='text'
        class='form-control'
        disabled
        value='{{name}}'
      />
    </div>
    <div class='form-group col-md-6'>
      <label for='fathername' class='required'>Father's Name</label>
      <input disabled type='text' class='form-control' value='{{fathername}}' />
    </div>
  </div>
  <div class='row mb-2'>
    <div class='form-group col-md-6'>
      <label for='dob' class='required'>Date of Birth</label>
      <input disabled type='date' class='form-control' value='{{dob}}' />
    </div>
    <div class='form-group col-md-6'>
      <label for='domicile' class='required'>Domicile (District)</label>
      <input disabled type='text' class='form-control' value='{{domicile}}' />
    </div>
  </div>

  <div class='row mb-2'>
    <div class='form-group col-md-6'>
      <label for='contact' class='required'>Contact No.</label>
      <input disabled type='text' class='form-control' value='{{contact}}' />
    </div>
    <div class='form-group col-md-6'>
      <label for='address' class='required'>Address</label>
      <input disabled type='text' class='form-control' value='{{address}}' />
    </div>
  </div>

  <div class='row mb-2'>
    <div class='form-group col-md-6'>
      <label for='gender' class='required'>Gender</label>
      <input type='text' disabled class='form-control' value='{{gender}}' />
    </div>
    <div class='form-group col-md-6'>
      <label for='religion' class='required'>Religion</label>
      <input disabled type='text' class='form-control' value='{{religion}}' />
    </div>
  </div>

</div>