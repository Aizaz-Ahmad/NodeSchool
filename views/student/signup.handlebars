<main class='container mt-5'>
  <div class='row justify-content-center'>
    <div class='col-10 col-md-6 col-lg-5'>
      <h2 class='text-center'>Signup for Student</h2>
      {{#if message}}
        {{#if error}}
          <div class='alert alert-danger mt-3'>{{message}}</div>
        {{else}}
          <div class='alert alert-success mt-3'>{{message}}</div>
        {{/if}}
      {{/if}}
      <form action='./signup' class='mt-3' method='POST'>
        <div class='form-row mb-3'>
          <div class='col-12'>
            <label for='email'>Email</label>
          </div>
          <div class='col-12'>
            <input
              type='email'
              id='email'
              name='email'
              class='form-control'
              required
            />
          </div>
        </div>
        <div class='form-row mb-3'>
          <div class='col-12'>
            <label for='password'>Password</label>
          </div>
          <div class='col-12'>
            <input
              type='password'
              id='password'
              name='password'
              class='form-control'
              required
            />
          </div>
        </div>
        <div class='form-row'>
          <div class='col-12'>
            <label for='confirm_password'>Confirm Password</label>
          </div>
          <div class='col-12'>
            <input
              type='password'
              id='confirm_password'
              name='confirm_password'
              class='form-control'
              required
            />
          </div>
        </div>
        <small>Already have an account? <a href='./login'>Log in</a></small>
        <button class='btn btn-success w-100 mt-3'>Signup</button>
      </form>
    </div>
  </div>
</main>