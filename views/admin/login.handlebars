<main class='container mt-5'>
  <div class='row justify-content-center'>
    <div class='col-10 col-md-6 col-lg-5'>
      <h2 class='text-center'>Login for Admin</h2>
      {{#if error}}
        <div class='alert alert-danger mt-3'>{{message}}</div>
      {{/if}}
      <form action='./login' class='mt-3' method='POST'>
        <div class='form-row mb-3'>
          <div class='col-12'>
            <label for='email'>Email</label>
          </div>
          <div class='col-12'>
            <input
              type='email'
              id='email'
              name='email'
              class='form-control'
              required
            />
          </div>
        </div>
        <div class='form-row mb-3'>
          <div class='col-12'>
            <label for='password'>Password</label>
          </div>
          <div class='col-12'>
            <input
              type='password'
              id='password'
              name='password'
              class='form-control'
              required
            />
          </div>
        </div>
        <button class='btn btn-success w-100 mt-3'>Login</button>
      </form>
    </div>
  </div>
</main>