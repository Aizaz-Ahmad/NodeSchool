<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='stylesheet' href='../../static/css/bootstrap.css' />
    <link
      rel='shortcut icon'
      href='../../static/favicon.ico'
      type='image/x-icon'
    />
    <link rel='stylesheet' href='../static/css/main.css' />
    <title>{{title}}&nbsp;&nbsp;|&nbsp;&nbsp;NodeSchool</title>
  </head>
  <body>
    <nav class='navbar navbar-expand-sm navbar-dark bg-dark'>
      <div class='container-fluid'>
        <a class='navbar-brand' href='/'>NodeSchool</a>
        <button
          class='navbar-toggler'
          type='button'
          data-bs-toggle='collapse'
          data-bs-target='#navbarSupportedContent'
          aria-controls='navbarSupportedContent'
          aria-expanded='false'
          aria-label='Toggle navigation'
        >
          <span class='navbar-toggler-icon'></span>
        </button>
        <div class='collapse navbar-collapse' id='navbarSupportedContent'>
          <div class='navbar-nav ms-auto'>
            <a class='nav-link active' aria-current='page' href='/'>Home</a>
            {{#if user}}
              <a href='/{{user}}/logout' class='nav-link'>Logout</a>
            {{else}}
              <a href='/student/signup' class='nav-link'>Signup as Student</a>
              <a href='/admin/login' class='nav-link'>Login as Admin</a>
            {{/if}}
          </div>
        </div>
      </div>
    </nav>
    {{{body}}}
  </body>
  <script src='/static/js/bootstrap.js'></script>
</html>